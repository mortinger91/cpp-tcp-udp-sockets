{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Server",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/build/debug/bin/cpp-tcp-udp-server",
            "args": ["server"],
			"preLaunchTask": "build_debug",
			"cwd": "${workspaceFolder}",
		},
        {
			"name": "Debug Client",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/build/debug/bin/cpp-tcp-udp-server",
            "args": ["client"],
			"preLaunchTask": "build_debug",
			"cwd": "${workspaceFolder}",
		},
		{
			"name": "Release Server",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/release/bin/cpp-tcp-udp-server",
			"args": ["server"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "build_release",
			"miDebuggerPath": "/usr/bin/gdb"
		}
	]
}